                                Text="{Binding SourceOfInformation, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}" 
                                    />

                                <TextBlock Text="Choose" Name="dc_canuseinmenuLabel" Grid.Row="2" Grid.Column="0" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap">
                                    <Run>Choose</Run>
                                    <Run Foreground="{StaticResource defaultFontRequiredColor}">*</Run>
                                </TextBlock>
