                                <Controls:WatermarkTextBox x:Name="dc_food_nutrients_dc_vit_a_iu" Grid.Row="10" Grid.Column="1" Margin="2" Style="{StaticResource WatermarkTextBox}"
                                Text="{Binding VitaminA, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                            />

                             
                                
