                                            Text="{Binding Copper, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                        />

                                        <TextBlock Text="Magnesium" Name="dc_food_nutrients_dc_manganeseLabel" Grid.Row="8" Grid.Column="0" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap"/>
                                        <Controls:WatermarkTextBox x:Name="dc_food_nutrients_dc_manganese" Grid.Row="8" Grid.Column="1" Margin="2" Style="{StaticResource WatermarkTextBox}"
                                            Text="{Binding Magnesium, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                        />

                                        <TextBlock Text="Choline" Name="dc_food_nutrients_dc_cholineLabel" Grid.Row="8" Grid.Column="2" Style="{StaticResource TextBlockLabelRight}"  TextWrapping="Wrap"/>
                                        <Controls:WatermarkTextBox x:Name="dc_food_nutrients_dc_choline" Grid.Row="8" Grid.Column="3" Margin="2" Style="{StaticResource WatermarkTextBox}"
                                            Text="{Binding Choline, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                        />

                                        <TextBlock Text="Chromium" Name="dc_food_nutrients_dc_chromiumLabel" Grid.Row="9" Grid.Column="0" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap"/>
                                        <Controls:WatermarkTextBox x:Name="dc_food_nutrients_dc_chromium" Grid.Row="9" Grid.Column="1" Margin="2" Style="{StaticResource WatermarkTextBox}"
                                            Text="{Binding Chromium, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                        />

                                        <TextBlock Text="Phosphorus" Name="dc_food_nutrients_dc_phosphorusLabel" Grid.Row="9" Grid.Column="2" Style="{StaticResource TextBlockLabelRight}"  TextWrapping="Wrap"/>
                                        <Controls:WatermarkTextBox x:Name="dc_food_nutrients_dc_phosphorus" Grid.Row="9" Grid.Column="3" Margin="2" Style="{StaticResource WatermarkTextBox}"
                                            Text="{Binding Phosphorus, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                        />

                                        <TextBlock Text="Ingredient List" Name="dc_ingredientlistLabel" Grid.Row="10" Grid.Column="0" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap"/>
                                        <Controls:WatermarkTextBox x:Name="dc_ingredientlist" Grid.Row="10" Grid.Column="1" Margin="2" Grid.ColumnSpan="3" Style="{StaticResource WatermarkTextBox}"
                                            Text="{Binding IngredientList, Mode=TwoWay, UpdateSourceTrigger=Explicit, ValidatesOnExceptions=True, NotifyOnValidationError=True}"
                                        />
                                        <TextBlock Text="Click on all of the following ingredients that are contain in this food:"  Grid.Row="11" Grid.Column="0"  Grid.ColumnSpan="4" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap"/>

                                        <StackPanel Grid.Row="12" Grid.Column="0" Margin="2" Grid.ColumnSpan="4" Orientation="Horizontal">
                                            <CheckBox Content="Corn" Name="dc_corn" Width="100" IsChecked="{Binding Corn, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            <CheckBox Content="Eggs" Name="dc_egg"  Width="100" IsChecked="{Binding Eggs, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            <CheckBox Content="Dairy" Name="dc_dairy"  Width="100" IsChecked="{Binding Dairy, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            
                                        </StackPanel>

                                        <StackPanel Grid.Row="13" Grid.Column="0" Margin="2" Grid.ColumnSpan="4" Orientation="Horizontal">
                                            <CheckBox Content="Soy" Name="dc_soy" Width="100" IsChecked="{Binding Soy, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            <CheckBox Content="Peanuts" Name="dc_peanut" Width="100" IsChecked="{Binding Peanuts, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            <CheckBox Content="Caffeine" Name="dc_caffeine" Width="100" IsChecked="{Binding Caffeine, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            <CheckBox Content="Any Animal Product" Name="dc_animalproduct" Width="200" IsChecked="{Binding AnimalProduct, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Row="14" Grid.Column="0" Margin="2" Grid.ColumnSpan="4" Orientation="Horizontal">
                                            <CheckBox Content="Artificial Sweeteners"  Width="200" Name="dc_artificialsweeteners" IsChecked="{Binding ArtificialSweeteners, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                            <CheckBox Content="Artificial Colors And Additives" Width="300"  Name="dc_artificialcolorsadditives" IsChecked="{Binding ArtificialColorsAdditives, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Cursor="Hand" Style="{StaticResource DefaultCheckBox}"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>


                            </Grid>


                        </ScrollViewer>


                        <TextBlock Text="Make this Food available to all users:" Name="dc_availabletoallusersLabel" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap"/>
                        <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <RadioButton Name="availableToAllUsersYes" GroupName="AvailableToUsersOptions" Content="Yes" Margin="0,0,10,0" Cursor="Hand" ToolTipService.ToolTip="Yes"
                                    IsChecked="{Binding AvailableToAllUsers, Mode=TwoWay, ValidatesOnExceptions=True, 
                                    NotifyOnValidationError=True, UpdateSourceTrigger=Explicit,
                                    ConverterParameter=True, Converter={StaticResource radioButtonConverterAvailable}}"            
                                />
                            <RadioButton Name="availableToAllUsersNo" GroupName="AvailableToUsersOptions" Content="No"  Cursor="Hand" ToolTipService.ToolTip="No"
                                    IsChecked="{Binding AvailableToAllUsers, Mode=TwoWay, ValidatesOnExceptions=True, 
                                    NotifyOnValidationError=True, UpdateSourceTrigger=Explicit,
                                    ConverterParameter=False, Converter={StaticResource radioButtonConverterAvailable}}"             
                                />
                        </StackPanel>
                        <Button Content="Show Nutrient Additional Fields" Grid.Row="4" HorizontalAlignment="Left" Height="24" VerticalAlignment="Center" Click="ShowAdditionalFields"
                            Grid.Column="0" Width="225" Grid.ColumnSpan="2" Style="{StaticResource DefaultButtonStyle}" ToolTipService.ToolTip="Show Nutrient Additional Fields" >
                        </Button>
                        <Button Content="Save" Grid.Row="5" Grid.Column="0" Width="75" HorizontalAlignment="Left" ToolTipService.ToolTip="Save" 
                            Cursor="Hand"  Height="24" VerticalAlignment="Center" Margin="0,0,0,0" Click="SaveFood"/>
                    </Grid>



                </StackPanel>
            </toolkit2:BusyIndicator>
        </Border>
    </Grid>
</UserControl>
