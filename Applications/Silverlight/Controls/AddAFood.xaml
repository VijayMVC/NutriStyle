                                    IsChecked="{Binding MenuFood, Mode=TwoWay, ValidatesOnExceptions=True, 
                                    NotifyOnValidationError=True, UpdateSourceTrigger=Explicit,
                                    ConverterParameter=False, Converter={StaticResource radioButtonConverter}}"            
                                />
                                    <RadioButton Name="both" GroupName="menuFoodOptions" Content="Can be both an Ingredient and a Menu Food"  Cursor="Hand" ToolTipService.ToolTip="Both"
                                    IsChecked="{Binding MenuFood, Mode=TwoWay, ValidatesOnExceptions=True, 
                                    NotifyOnValidationError=True, UpdateSourceTrigger=Explicit,
                                    ConverterParameter=True, Converter={StaticResource radioButtonConverter}}"             
                                />
                                </StackPanel>


                                <TextBlock Text="Serving Size: Amount " Name="dc_portion_amountLabel" Grid.Row="3" Grid.Column="0" Style="{StaticResource TextBlockLabel}"  TextWrapping="Wrap"/>
