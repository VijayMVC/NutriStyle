<UserControl x:Class="DynamicConnections.NutriStyle.MenuGenerator.Controls.MealHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="29" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" VerticalAlignment="Stretch" Background="#D3E9FF" Height="23" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="32"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Text" Name="Label" Margin="5,2,5,0" Foreground="#6B6A6D" Grid.Column="0" FontWeight="Bold" FontSize="14"/>
            <Button Click="Button_Click" Content="Add Food" Grid.Column="1" ToolTipService.ToolTip="Add Food" Cursor="Hand"/>
        <sdk:Label Content="Del" Name="Delete" Grid.Column="4" HorizontalAlignment="Center" Foreground="#6B6A6D" FontWeight="Bold"/>
    
    </Grid>
</UserControl>
