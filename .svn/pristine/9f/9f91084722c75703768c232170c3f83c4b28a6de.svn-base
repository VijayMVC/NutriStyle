<UserControl x:Class="DynamicConnections.NutriStyle.MenuGenerator.Controls.MealFooter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="29" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Transparent" Height="auto">
        <StackPanel Height="20"  Orientation="Horizontal">
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0.5">
                    <GradientStop Color="#FFFFFF" Offset="0"/>
                    <GradientStop Color="#D3E9FF" Offset=".85"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="Kcals:" TextAlignment="Right" Margin="5,2,5,0" Foreground="#6B6A6D"/>
            <TextBlock Text="Protein:" Margin="5,2,5,0" Foreground="#6B6A6D"/>
            <TextBlock Text="Fat:" Margin="5,2,5,0" Foreground="#6B6A6D"/>
            <TextBlock Text="Carbs:" Margin="5,2,5,0" Foreground="#6B6A6D"/>
        </StackPanel>
    </Grid>
</UserControl>
